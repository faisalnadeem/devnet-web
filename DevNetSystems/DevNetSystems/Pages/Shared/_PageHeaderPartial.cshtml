<!-- Hero Section -->
<section id="page-header" class="page-header section dark-background">

    <img src="@ViewBag.ImagePath" alt="" data-aos="fade-in">

    <div class="container d-flex flex-column align-items-center text-center">
        <p data-aos="fade-up" data-aos-delay="100" style="font-size: 16px; color: rgba(255, 255, 255, 0.9); margin-bottom: 15px; text-transform: uppercase; letter-spacing: 1px;">@ViewBag.PageDescription</p>
        <h2 data-aos="fade-up" data-aos-delay="200">@ViewBag.PageTitle</h2>
    </div>

</section><!-- /Hero Section -->